<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="card" stylesheets="@../assets/css/styles.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="image" fitHeight="270.0" fitWidth="267.5" pickOnBounds="true" styleClass="media-image">
         <effect>
            <Glow />
         </effect></ImageView>
      <VBox styleClass="media-body">
         <children>
            <Label fx:id="name" />
            <Label fx:id="phone" />
            <Label fx:id="price" />
            <Label fx:id="address" />
            <Button alignment="CENTER" mnemonicParsing="false" styleClass="btn-default" stylesheets="@../assets/css/styles.css" text="Contacter" />
         </children>
      </VBox>
   </children>
   <effect>
      <DropShadow />
   </effect>
   <styleClass>
      <String fx:value="bg-color-5" />
      <String fx:value="card" />
   </styleClass>
</HBox>
