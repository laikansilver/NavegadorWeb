<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<StackPane styleClass="planet-list" stylesheets="@../assets/css/styles.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <FlowPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="image" fitHeight="300.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
               </children>
               <padding>
                  <Insets left="30.0" right="30.0" top="100.0" />
               </padding>
            </FlowPane>
            <VBox fx:id="infosBox">
               <children>
                  <Label fx:id="title" alignment="CENTER" styleClass="cartoon-title" text="Label" />
                  <Label fx:id="count" style="-fx-font-family: 'Open Sans',sans-serif; -fx-font-size: 18px;" text="NOMBRE D'EPISODES : " />
                  <Label style="-fx-font-family: 'Open Sans',sans-serif; -fx-font-size: 18px;" text="RESUME :" />
                  <Label fx:id="resume" text="Label" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="closeBtn" mnemonicParsing="false" prefHeight="130.0" prefWidth="130.0" styleClass="btn-exit">
         <padding>
            <Insets right="50.0" top="50.0" />
         </padding>
         <graphic>
            <FontAwesomeIconView glyphName="CLOSE" />
         </graphic>
      </Button>
   </children>
</StackPane>
