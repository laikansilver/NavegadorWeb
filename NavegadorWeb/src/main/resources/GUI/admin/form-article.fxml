<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="container" stylesheets="@../../assets/css/admin-styles.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox styleClass="panel">
            <children>
                <HBox prefHeight="100.0" styleClass="panel-heading">
                    <children>
                        <Label text="Ajouter un article" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <VBox fx:id="panelBody" spacing="10.0" styleClass="panel-body">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label prefWidth="200.0" styleClass="form-label" text="Titre :" />
                        <TextField fx:id="title" styleClass="input" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label prefWidth="200.0" styleClass="form-label" text="Description :" />
                        <TextField fx:id="description" styleClass="input" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label prefWidth="200.0" styleClass="form-label" text="Sujet :" />
                        <TextField fx:id="subject" styleClass="input" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label prefWidth="200.0" styleClass="form-label" text="Categorie:" />
                         <ComboBox fx:id="category" prefHeight="32.0" prefWidth="177.0" styleClass="input" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label prefWidth="200.0" styleClass="form-label" text="Source:" />
                        <TextField fx:id="src" styleClass="input" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  
                  <HBox alignment="CENTER_LEFT">
                   <children>
                        <Label prefWidth="200.0" styleClass="form-label" text="Date:" />
                        <DatePicker fx:id="date" styleClass="input" />
                        
                     </children>
                  </HBox>
                  
                  
                  
                  
                   <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label prefWidth="200.0" styleClass="form-label" text="Type:" />
                         <ComboBox fx:id="type" prefHeight="32.0" prefWidth="177.0" styleClass="input" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                 
                    <HBox alignment="CENTER_LEFT">
                   <children>
                        <Label prefWidth="200.0" styleClass="form-label" text="Auteur:" />
                        <TextField fx:id="auteur" styleClass="input" HBox.hgrow="ALWAYS" />
                        
                     </children>
                  </HBox>
                  
                  
                  
                 
                  <HBox alignment="CENTER_LEFT">
                      <children>
                     <Label prefWidth="200.0" styleClass="form-label" text="Image:" />
                        <Button fx:id="icon" mnemonicParsing="false" text="Choisir une image">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="btn-default" />
                           </styleClass>
                          
                        </Button>
                     </children>
                  </HBox>
                  
                 
                  <HBox alignment="CENTER_RIGHT" layoutX="40.0" layoutY="156.0">
                     <children>
                        <Button fx:id="save" mnemonicParsing="false" text="Ajouter">
                           <styleClass>
                              <String fx:value="btn" />
                              <String fx:value="btn-success" />
                           </styleClass>
                        </Button>
                     </children>
                  </HBox>
               </children>
                </VBox>
            </children>
        </VBox>
    </children>
</VBox>
